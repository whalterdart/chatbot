generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:pagana@db:5432/pagana?schema=public"
}

model User {
  id        String    @id @default(uuid())
  nome      String
  telefone  String    @unique
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id        String       @id @default(uuid())
  content   String      
  type      MessageType  
  user      User?        @relation(fields: [userId], references: [id])
  userId    String?      
  createdAt DateTime     @default(now())
}

enum MessageType {
  CLIENTE
  IA
}
